model OrderItem {
  productId Int
  quantity  Int
  price     Float
  subtotal  Float
}

model Order {
  id            Int         @id
  customerId    Int
  items         OrderItem[]
  total         Float
  status        String      // pending, processing, paid, shipped, delivered, cancelled
  paymentId     String?
  shippingId    String?
  createdAt     DateTime    @default(now)
  updatedAt     DateTime    @default(now)
  expiresAt     DateTime?
}
